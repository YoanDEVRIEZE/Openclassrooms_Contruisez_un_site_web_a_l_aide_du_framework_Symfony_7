{% extends 'base.html.twig' %}

{% block title %}Livres
{% endblock %}

{% block body %}
	<section class="py-5">
		<div class="container px-4 px-lg-5 mt-5">
        <h1>Notre sélection de livres : </h1>
			<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {% for books in liste_book %}
				    <div class="col mb-5">                    
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top img-fluid" style="height: 400px;" src="{{ books.cover }}" alt="{{ books.title }}"/>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">{{ books.title }}</h5>
                                    {{ books.author.name }}
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto" href="#">Découvrir</a>
                                </div>
                            </div>
                        </div>
				    </div>
                {% endfor %}
			</div>
            {{ pagerfanta(liste_book, 'twitter_bootstrap5', { prev_message: 'Précédent', next_message: 'Suivant'}) }}
		</div>
	</section>
{% endblock %}
