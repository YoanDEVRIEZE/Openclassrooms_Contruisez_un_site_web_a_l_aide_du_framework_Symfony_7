{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <section id="about">
		<div class="container px-4">
			<div class="row gx-4 justify-content-center">
				<div class="col-lg-8 w-50 m-auto">
					<form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes déjà connecté avec : <b>{{ app.user.userIdentifier }}</b>, <a href="{{ path('app_logout') }}">Déconnexion</a>
                            </div>
                        {% endif %}
                        <h1 class="h3 mb-3 font-weight-normal">Interface de connexion</h1>
                        <label for="username">E-mail</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" required autofocus>
                        <label for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="form-control mb-3" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                    </form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
