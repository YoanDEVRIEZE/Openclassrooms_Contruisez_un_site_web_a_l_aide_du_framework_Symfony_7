{% extends 'base.html.twig' %}

{% block title %}
	{{ book.title }}
{% endblock %}

{% block body %}
	<section class="py-5">
		<div class="container px-4 px-lg-5 my-5">
			<div class="row gx-4 gx-lg-5 align-items-center">
				<div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="{{ book.cover }}" alt="{{ book.title }}"/></div>
				<div class="col-md-6">
					<div class="small mb-1">ISBN: {{ book.isbn }}</div>
					<h1 class="display-5 fw-bolder">{{ book.title }}</h1>
					<div class="fs-5 mb-5">
						<span>Auteur(s) : {{ book.author.name }}</span>
                        <br>
                        <span>Editeur : {{ book.editor.name }}</span>
                        <br>
                        <span>{{ book.pageNumber }} pages - {{ book.editAt|date('d M Y') }}</span>
                        <br>
                        <span>Statut : {{ book.status.name }}</span>
					</div>
					<p class="lead">{{ book.plot }}</p>
					<div class="d-flex">
						<a class="btn btn-outline-dark flex-shrink-0" href="{{ path('app_book') }}">
							<i class="bi-cart-fill me-1"></i>
							Retour Ã  la liste
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
