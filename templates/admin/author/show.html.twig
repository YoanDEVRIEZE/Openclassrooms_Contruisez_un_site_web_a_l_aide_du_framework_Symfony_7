{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <section id="about">
		<div class="container px-4">
			<div class="row gx-4 justify-content-center">
				<div class="col-lg-8 w-50 m-auto">
                    <h1>Détail de l'auteur :</h1>
                    <a class="btn btn-primary mb-3" href="{{ path('app_admin_author') }}"><- Liste des auteurs</a>
                    <div class="form-group">
                        <b>Nom / Prénom : </b>{{ author.name }}
                    </div>
                    <div class="form-group">
                        <b>Nationalité : </b>{{ author.nationality }}
                    </div>
                    <div class="form-group">
                        <b>Date de naissance : </b>{{ author.dateOfBirth | date ('d/m/Y') }}
                    </div>
                    {% if author.dateOfDeath != "" %}
                        <div class="form-group">
                            <b>Date du décès : </b>{{ author.dateOfDeath | date ('d/m/Y') }}
                        </div>
                    {% endif %}
                    <div class="form-group">
                        <b>Livres de cet auteur : </b>
                        <ul>
                            {% for livres in author.books %}
                                <li>{{ livres.title }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
			</div>
		</div>
	</section>
{% endblock %}